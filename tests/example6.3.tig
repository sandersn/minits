type Tree = { 
    key: string,
    left: Tree,
    right: Tree 
}
function prettyprint(tree: Tree): string =
    let var output = ""
    function write(s: string) =
        output = concat(output, s)
    function show (n: int, t: Tree) =
        let function indent(s: string) = (
            for i = 1 to n do write(" ")
            output = concat(output, s)
            write("\n")
        ) in if t == null then 
            indent(".") 
        else (
            indent(t.key)
            show(n + 1, t.left)
            show(n + 1, t.right)
        )
    in (
        show(0, tree)
        output
    )